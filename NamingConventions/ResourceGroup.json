{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupLocation": {
            "type": "string"
        },
        "shortLocation": {
            "type": "string"
        },
        "ResourceGroupCount": {
            "type": "int"
        },
        "Application_Acronym": {
            "type": "string"
        },
        "Tier_Name": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        },
        "Role": {
            "type": "string"
        },
        "Tenant": {
            "type": "string"
        },
        "Custom": {
            "type": "string"
        }
    },
    "variables": {
        "ResourceGroupName": "[toupper(concat('GAV-',parameters('shortLocation'),'-',parameters('Application_Acronym'),'-',parameters('Tier_Name'),'-',parameters('Environment_Category'),'-',parameters('Role'),'-',parameters('Tenant'),'-','01','-',parameters('Custom')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('ResourceGroupLocation')]",
            "name": "[variables('ResourceGroupName')]",
            "copy": {
                "name": "rgloop",
                "count": "[parameters('ResourceGroupCount')]"
            },
            "properties": {}
        }
    ],
    "outputs": {
        "ResourceGroupName": {
            "type": "string",
            "value": "[variables('ResourceGroupName')]"
        }
    }
}
