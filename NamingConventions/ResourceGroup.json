{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupLocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars. E.g. East US - EU, West US - WU, East US 2 - EU2"
            }
        },
        "ResourceGroupCount": {
            "type": "int"
        },
        "Application_Acronym": {
            "type": "string"
        },
        "Tier_Name": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        },
        "Role": {
            "type": "string"
        },
        "Tenant": {
            "type": "string"
        },
        "Custom": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location":"[parameters('ResourceGroupLocation')]",
            "name": "[toupper(concat('GAV-',parameters('ResourceGroupLocation'),'-',parameters('Application_Acronym'),'-',parameters('Tier_Name'),'-',parameters('Environment_Category'),'-',parameters('Role'),'-',parameters('Tenant'),'-','0',copyindex(1),'-',parameters('Custom')))]",
            "copy": {
                "name": "rgloop",
                "count": "[parameters('ResourceGroupCount')]"
            },
            "properties": {}
        }
    ]
}
