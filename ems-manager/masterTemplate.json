{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultvalue": "westus2"
        },
        "existingvirtualNetworkRG": {
            "type": "string",
            "defaultvalue": ""
        },
        "existingvirtualNetworkName": {
            "type": "string",
            "defaultvalue": ""
        },
        "subnetName": {
            "type": "string",
            "defaultvalue": ""
        },
        "virtualMachineName": {
            "type": "string",
            "defaultvalue": ""
        },
        "AvailabilitySet": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "metadata": {
                "description": "Select whether the VM should be in AvailabilitySet or not."
            }
        },
        "privateIpAddress": {
            "type": "string",
            "defaultvalue": ""
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultvalue": ""
        },
        "numberOfDataDisks": {
            "type": "int",
            "defaultvalue": 1
        },
        "DataDiskName": {
            "type": "array",
            "defaultvalue": [
                "ADI"
            ]
        },
        "DataDiskSize": {
            "type": "int",
            "defaultvalue": 1023
        },
        "adminUsername": {
            "type": "string",
            "defaultvalue": ""
        },
        "adminPassword": {
            "type": "securestring",
            "defaultvalue": ""
        },
        "DomainUserName": {
            "type": "string",
            "defaultValue": ""
        },
        "DomainPassword": {
            "type": "securestring",
            "defaultValue": ""
        },
        "baseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager"
        }
    },
    "variables": {
        "domainName": "efoqa.local",
        "osDiskType": "Premium_LRS",
        "StorageAccountName": "emsmgrstr001",
        "StorageAccountType": "Standard_GRS",
        "StorageAccountKind": "Storage",
        "workspaceName": "emslogomsworksps",
        "enableAcceleratedNetworking": true,
        "networkInterfaceName": "[concat(parameters('virtualMachineName'),'-nic-001')]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'),'nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(parameters('existingvirtualNetworkRG'), 'Microsoft.Network/virtualNetworks', parameters('existingvirtualNetworkName'))]",
        "StorageAccountId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',resourceGroup().name, '/providers/','Microsoft.Storage/storageAccounts/', variables('StorageAccountName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
        "networkInterfaceTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkInterface.json')]",
        "networkSecurityGroupTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkSecurityGroup.json')]",
        "virtualMachineTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/emsVM.json')]",
        "StorageAccountTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/StorageAccount.json')]",
        "diagnosticsTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/diagnostics.json')]",
        "domainJoinTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/domainJoin.json')]"
    },
    "resources": [
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "HTTPS",
                        "properties": {
                            "priority": 300,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "443"
                        }
                    }
                ]
            },
            "tags": {}
        },
        {
            "name": "[variables('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('networkSecurityGroupName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIpAddress": "[parameters('privateIpAddress')]",
                            "privateIpAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[variables('enableAcceleratedNetworking')]",
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
