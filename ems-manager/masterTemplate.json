{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultvalue": "westus2"
        },
        "existingvirtualNetworkRG": {
            "type": "string",
            "defaultvalue": "GAV-WE2-NET-SB-PRD-NET-SRD-01"
        },
        "existingvirtualNetworkName": {
            "type": "string",
            "defaultvalue": "corevnet"
        },
        "subnetName": {
            "type": "string",
            "defaultvalue": "Subnet-1"
        },
        "virtualMachineName": {
            "type": "string",
            "defaultvalue": "emsmgr001"
        },
        "AvailabilitySet": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "Yes",
                "No"
            ],
            "metadata": {
                "description": "Select whether the VM should be in AvailabilitySet or not."
            }
        },
        "privateIpAddress": {
            "type": "string",
            "defaultvalue": "10.0.0.6"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultvalue": "Standard_DS4_v2"
        },
        "numberOfDataDisks": {
            "type": "int",
            "defaultvalue": 1
        },
        "DataDiskName": {
            "type": "array",
            "defaultvalue": [
                "ADI"
            ]
        },
        "DataDiskSize": {
            "type": "int",
            "defaultvalue": 1024
        },
        "adminUsername": {
            "type": "string",
            "defaultvalue": "azadmin"
        },
        "adminPassword": {
            "type": "securestring",
            "defaultvalue": ""
        },
        "DomainUserName": {
            "type": "string"
        },
        "DomainPassword": {
            "type": "securestring"
        },
        "baseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager"
        }
    },
    "variables": {
        "domainName": "efoqa.local",
        "osDiskType": "Premium_LRS",
        "StorageAccountName": "emsmgrstr001010",
        "StorageAccountType": "Standard_GRS",
        "StorageAccountKind": "Storage",
        "workspaceName": "emslogomsworksps010",
        "enableAcceleratedNetworking": true,
        "networkInterfaceName": "[concat(parameters('virtualMachineName'),'-nic-001')]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'),'-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(parameters('existingvirtualNetworkRG'), 'Microsoft.Network/virtualNetworks', parameters('existingvirtualNetworkName'))]",
        "StorageAccountId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',resourceGroup().name, '/providers/','Microsoft.Storage/storageAccounts/', variables('StorageAccountName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
        "networkInterfaceTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkInterface.json')]",
        "networkSecurityGroupTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkSecurityGroup.json')]",
        "virtualMachineTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/emsVM.json')]",
        "StorageAccountTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/StorageAccount.json')]",
        "diagnosticsTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/diagnostics.json')]",
        "domainJoinTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/domainJoin.json')]"
    },
    "resources": [
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "HTTPS",
                        "properties": {
                            "priority": 300,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "443"
                        }
                    }
                ]
            },
            "tags": {}
        },
        {
            "name": "[variables('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('networkSecurityGroupName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIpAddress": "[parameters('privateIpAddress')]",
                            "privateIpAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[variables('enableAcceleratedNetworking')]",
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        },
        {
            "name": "[variables('StorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "properties": {},
            "kind": "[variables('StorageAccountKind')]",
            "sku": {
                "name": "[variables('StorageAccountType')]"
            },
            "tags": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "virtualMachine",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "[variables('networkInterfaceName')]",
                "[variables('StorageAccountName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('virtualMachineTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "AvailabilitySet": {
                        "value": "[parameters('AvailabilitySet')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('networkInterfaceName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "osDiskType": {
                        "value": "[variables('osDiskType')]"
                    },
                    "DataDiskName": {
                        "value": "[parameters('DataDiskName')]"
                    },
                    "numberOfDataDisks": {
                        "value": "[parameters('numberOfDataDisks')]"
                    },
                    "DataDiskSize": {
                        "value": "[parameters('DataDiskSize')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "workspaceName": {
                        "value": "[variables('workspaceName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "domainJoin",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "virtualMachine"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('domainJoinTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "domainName": {
                        "value": "[variables('domainName')]"
                    },
                    "DomainUserName": {
                        "value": "[parameters('DomainUserName')]"
                    },
                    "DomainPassword": {
                        "value": "[parameters('DomainPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "diagnosticsExtension",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "virtualMachine"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('diagnosticsTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "diagnosticsExtensionName": {
                        "value": "[variables('diagnosticsExtensionName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "StorageAccountId": {
                        "value": "[variables('StorageAccountId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
