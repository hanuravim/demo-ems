{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "existingvirtualNetworkRG": {
            "type": "string"
        },
        "existingvirtualNetworkName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "AvailabilitySet": {
            "type": "string",
            "metadata": {
                "description": "Select whether the VM should be in AvailabilitySet or not."
            }
        },
        "privateIpAddress": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "DomainUsername": {
            "type": "string",
            "defaultValue": ""
        },
        "DomainPassword": {
            "type": "securestring",
            "defaultValue": ""
        },
        "baseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager"
        }
    },
    "variables": {
        "domainName": "efoqa.local",
        "osDiskType": "Premium_LRS",
        "StorageAccountName": "emsmgrstr001",
        "StorageAccountType": "Standard_GRS",
        "StorageAccountKind": "Storage",
        "DataDiskName": "ADI",
        "DataDiskSize": 1023,
        "dataDisks": [
            {
                "lun": 0,
                "createOption": "attach",
                "caching": "ReadOnly",
                "writeAcceleratorEnabled": false,
                "id": null,
                "name": "ADI",
                "storageAccountType": null
            }
        ],
        "dataDiskResources": [
            {
                "name": "[variables('DataDiskName')]",
                "diskSizeGB": "[variables('DataDiskSize')]",
                "sku": "[variables('osDiskType')]",
                "creationData": {
                    "createOption": "empty"
                }
            }
        ],
        "availabilitySetName": "emsmgravset",
        "networkInterfaceName": "[concat(parameters('virtualMachineName'),'-nic-001')]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'),'-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(parameters('existingvirtualNetworkRG'), 'Microsoft.Network/virtualNetworks', parameters('existingvirtualNetworkName'))]",
        "StorageAccountId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',resourceGroup().name, '/providers/','Microsoft.Storage/storageAccounts/', variables('StorageAccountName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
        "networkInterfaceTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkInterface.json')]",
        "networkSecurityGroupTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/networkSecurityGroup.json')]",
        "DataDiskTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/DataDisk.json')]",
        "virtualMachineTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/emsVM.json')]",
        "StorageAccountTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/StorageAccount.json')]",
        "diagnosticsTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/diagnostics.json')]",
        "domainJoinTemplate": "[concat(parameters('baseUri'),'/nestedTemplates/domainJoin.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "NetworkInterface",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "networkSecurityGroup"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkInterfaceTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('networkInterfaceName')]"
                    },
                    "privateIpAddress": {
                        "value": "[parameters('privateIpAddress')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[variables('networkSecurityGroupName')]"
                    },
                    "nsgId": {
                        "value": "[variables('nsgId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "networkSecurityGroup",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkSecurityGroupTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkSecurityGroupName": {
                        "value": "[variables('networkSecurityGroupName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "DataDisk",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('DataDiskTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataDiskResources": {
                        "value": "[variables('dataDiskResources')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "virtualMachine",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "DataDisk",
                "NetworkInterface",
                "StorageAccount"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('virtualMachineTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "AvailabilitySet": {
                        "value": "[parameters('AvailabilitySet')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('networkInterfaceName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "availabilitySetName": {
                        "value": "[variables('availabilitySetName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "osDiskType": {
                        "value": "[variables('osDiskType')]"
                    },
                    "dataDisks": {
                        "value": "[variables('dataDisks')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "StorageAccount",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('StorageAccountTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "StorageAccountKind": {
                        "value": "[variables('StorageAccountKind')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "domainJoin",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "virtualMachine"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('domainJoinTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "domainName": {
                        "value": "[variables('domainName')]"
                    },
                    "DomainUserName": {
                        "value": "[parameters('DomainUserName')]"
                    },
                    "DomainPassword": {
                        "value": "[parameters('DomainPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "diagnosticsExtension",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "virtualMachine"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('diagnosticsTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "diagnosticsExtensionName": {
                        "value": "[variables('diagnosticsExtensionName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "StorageAccountId": {
                        "value": "[variables('StorageAccountId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
