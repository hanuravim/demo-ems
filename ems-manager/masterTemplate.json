{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "virtualNetworkRG": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "privateIpAddress": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "baseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager"
        }
    },
    "variables": {
        "domainName": "efoqa.local",
        "osDiskType": "Premium_LRS",
        "StorageAccountName": "geemsstr001",
        "StorageAccountType": "Premium_LRS",
        "StorageAccountKind": "Storage",
        "StorageAccountId": "Microsoft.Storage/storageAccounts/[variables('StorageAccountName')]",
        "DataDiskName": "ADI",
        "DataDiskSize": 1023,
        "dataDisks": [
            {
                "lun": 0,
                "createOption": "attach",
                "caching": "ReadOnly",
                "writeAcceleratorEnabled": false,
                "id": null,
                "name": "ADI",
                "storageAccountType": null
            }
        ],
        "dataDiskResources": [
            {
                "name": "[variables('DataDiskName')]",
                "diskSizeGB": "[variables('DataDiskSize')]",
                "sku": "[variables('osDiskType')]",
                "creationData": {
                    "createOption": "empty"
                }
            }
        ],
        "availabilitySetName": "emsmgravset",
        "availabilitySetPlatformFaultDomainCount": "2",
        "availabilitySetPlatformUpdateDomainCount": "5",
        "networkInterfaceName": "[concat(parameters('virtualMachineName'),'-nic-001')]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'),'-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(parameters('virtualNetworkRG'), 'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
        "networkInterfaceTemplate": "[concat(parameters('baseUri'),'/networkInterface.json')]",
        "networkSecurityGroupTemplate": "[concat(parameters('baseUri'),'/networkSecurityGroup.json')]",
        "DataDiskTemplate": "[concat(parameters('baseUri'),'/DataDisk.json')]",
        "virtualMachineTemplate": "[concat(parameters('baseUri'),'/virtualMachine.json')]",
        "StorageAccountTemplate": "[concat(parameters('baseUri'),'/StorageAccount.json')]",
        "AvailabilitySetTemplate": "[concat(parameters('baseUri'),'/AvailabilitySet.json')]",
        "diagnosticsTemplate": "[concat(parameters('baseUri'),'/diagnostics.json')]",
        "domainJoinTemplate": "[concat(parameters('baseUri'),'/domainJoin.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "NetworkInterface",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkInterfaceTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('networkInterfaceName')]"
                    },
                    "privateIpAddress": {
                        "value": "[parameters('privateIpAddress')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[variables('networkSecurityGroupName')]"
                    },
                    "nsgId": {
                        "value": "[variables('nsgId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "networkSecurityGroup",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkSecurityGroupTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkSecurityGroupName": {
                        "value": "[variables('networkSecurityGroupName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "DataDisk",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('DataDiskTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataDiskResources": {
                        "value": "[variables('dataDiskResources')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "virtualMachine",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "DataDisk",
                "NetworkInterface",
                "StorageAccount",
                "AvailabilitySet"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('virtualMachineTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "networkInterfaceName": {
                        "value": "[variables('networkInterfaceName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "availabilitySetName": {
                        "value": "[variables('availabilitySetName')]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "osDiskType": {
                        "value": "[variables('osDiskType')]"
                    },
                    "dataDisks": {
                        "value": "[variables('dataDisks')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "StorageAccount",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('StorageAccountTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "StorageAccountKind": {
                        "value": "[variables('StorageAccountKind')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AvailabilitySet",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('AvailabilitySetTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "availabilitySetName": {
                        "value": "[variables('availabilitySetName')]"
                    },
                    "availabilitySetPlatformFaultDomainCount": {
                        "value": "[variables('availabilitySetPlatformFaultDomainCount')]"
                    },
                    "availabilitySetPlatformUpdateDomainCount": {
                        "value": "[variables('availabilitySetPlatformUpdateDomainCount')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "domainJoin",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('domainJoinTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "domainName": {
                        "value": "[variables('domainName')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "diagnosticsExtension",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('diagnosticsTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineName')]"
                    },
                    "diagnosticsExtensionName": {
                        "value": "[variables('diagnosticsExtensionName')]"
                    },
                    "StorageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "StorageAccountId": {
                        "value": "[variables('StorageAccountId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
