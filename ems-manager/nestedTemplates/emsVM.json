{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupLocation": {
            "type": "string",
            "defaultValue": "WestUS2"
        },
        "Application_Acronym": {
            "type": "string",
            "maxLength": 2,
            "metadata": {
                "description": "2 chars e.g. fa"
            },
            "defaultValue": "fa"
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 1,
            "metadata": {
                "description": "1 chars e.g. Development - d, Production - p"
            },
            "defaultValue": "d"
        },
        "Role": {
            "type": "string",
            "maxLength": 1,
            "metadata": {
                "description": "1 chars e.g. RDP - d, Mgmt - m"
            },
            "defaultValue": "m"
        },
        "Custom": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "5 chars e.g. Tenant,Region"
            },
            "defaultValue": "aal"
        },
        "AvailabilitySet": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "networkInterfaceName": {
            "type": "string"
        },
        "StorageAccountName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "osDiskType": {
            "type": "string"
        },
        "DataDiskName": {
            "type": "array"
        },
        "numberOfDataDisks": {
            "type": "int"
        },
        "DataDiskSize": {
            "type": "int"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "string"
        },
        "omsWorkspaceResourceGroup": {
            "type": "string"
        },
        "omsWorkspaceName": {
            "type": "string"
        },
        "omsworkspacelocation": {
            "type": "string"
        }
    },
    "variables": {
        "availabilitySetName": "emsmgravset",
        "availabilitySetId": {
            "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('availabilitySetName'))]"
        },
        "dataDisks": [
            {
                "diskSizeGB": "[parameters('DataDiskSize')]",
                "lun": 0,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 1,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 2,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 3,
                "createOption": "Empty"
            }
        ]
    },
    "resources": [
        {
            "condition": "[equals(parameters('AvailabilitySet'), 'Yes')]",
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2017-03-30",
            "name": "[variables('availabilitySetName')]",
            "location": "[parameters('ResourceGroupLocation')]",
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 3
            },
            "sku": {
                "name": "Aligned"
            }
        },
        {
            "name": "[tolower(concat(parameters('Application_Acronym'),parameters('Environment_Category'),parameters('Role'),parameters('Custom'),'00',copyindex(1)))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('ResourceGroupLocation')]",
            "dependsOn": [],
            "properties": {
                "availabilitySet": "[if(equals(parameters('AvailabilitySet'), 'Yes'), variables('availabilitySetId'), json('null'))]",
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "dataDisks": "[take(variables('dataDisks'),parameters('numberOfDataDisks'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[tolower(concat(parameters('Application_Acronym'),parameters('Environment_Category'),parameters('Role'),parameters('Custom'),'00',copyindex(1)))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', parameters('StorageAccountName'), '.blob.core.windows.net/')]"
                    }
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "Microsoft.EnterpriseCloud.Monitoring",
                    "apiVersion": "2018-06-01",
                    "location": "[parameters('omsworkspacelocation')]",
                    "properties": {
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').customerId]"
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').primarySharedKey]"
                        }
                    }
                },
                {
                    "name": "AzureFileShares",
                    "type": "extensions",
                    "location": "[parameters('ResourceGroupLocation')]",
                    "apiVersion": "2018-06-01",
                    "tags": {
                        "displayName": "AzureFileShares"
                    },
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager/nestedTemplates/AzFileShare.ps1"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ','AzFileShare.ps1 -SAName ',parameters('StorageAccountName'),'  -SAKey ', listKeys(resourceId(resourceGroup().name,'Microsoft.Storage/storageAccounts', parameters('StorageAccountName')), '2015-06-15').key1)]"
                        }
                    }
                }
            ],
            "tags": {
                "vmrole": "ems manager"
            }
        }
    ]
}
