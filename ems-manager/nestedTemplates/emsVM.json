{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int"
        },
        "ResourceGroupLocation": {
            "type": "string",
            "defaultValue": "WestUS2"
        },
        "virtualmachineName": {
            "type": "string",
            "defaultValue": "fadmaal00"
        },
        "AvailabilitySet": {
            "type": "string",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_DS4_v2"
        },
        "StorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "networkInterfaceName": {
            "type": "string",
            "defaultValue": "gavwu2-ems-dev-nic-efoqa-00"
        },
        "DataDiskName": {
            "type": "array",
            "defaultvalue": [
                "ADI"
            ]
        },
        "numberOfDataDisks": {
            "type": "int"
        },
        "DataDiskSize": {
            "type": "int"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "omsWorkspaceResourceGroup": {
            "type": "string",
            "defaultValue": "GAV-WE2-NET-SB-PRD-NET-SRD-01"
        },
        "omsWorkspaceName": {
            "type": "string",
            "defaultValue": "emsLogAnalytics"
        }
    },
    "variables": {
        "availabilitySetName": "emsmgravset",
        "availabilitySetId": {
            "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('availabilitySetName'))]"
        },
        "dataDisks": [
            {
                "diskSizeGB": "[parameters('DataDiskSize')]",
                "lun": 0,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 1,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 2,
                "createOption": "Empty"
            },
            {
                "diskSizeGB": "[parameters('dataDiskSize')]",
                "lun": 3,
                "createOption": "Empty"
            }
        ]
    },
    "resources": [
        {
            "condition": "[equals(parameters('AvailabilitySet'), 'Yes')]",
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2017-03-30",
            "name": "[variables('availabilitySetName')]",
            "location": "[parameters('ResourceGroupLocation')]",
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 3
            },
            "sku": {
                "name": "Aligned"
            }
        },
        {
            "name": "[concat(parameters('virtualmachineName'),copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('ResourceGroupLocation')]",
            "copy": {
                "name": "vmloop",
                "count": "[parameters('vmCount')]"
            },
            "properties": {
                "availabilitySet": "[if(equals(parameters('AvailabilitySet'), 'Yes'), variables('availabilitySetId'), json('null'))]",
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('storageAccountType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "dataDisks": "[take(variables('dataDisks'),parameters('numberOfDataDisks'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/', resourceGroup().name,'/providers/','Microsoft.Network/networkInterfaces/',parameters('networkInterfaceName'),copyIndex(1))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat(parameters('virtualmachineName'),copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "Microsoft.EnterpriseCloud.Monitoring",
                    "apiVersion": "2018-06-01",
                    "location": "[parameters('ResourceGroupLocation')]",
                    "dependsOn": [
                        "[concat(parameters('virtualmachineName'),copyIndex(1))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').customerId]"
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId(parameters('omsWorkspaceResourceGroup'),'Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-03-20').primarySharedKey]"
                        }
                    }
                }
            ],
            "tags": {
                "vmrole": "ems manager"
            }
        }
    ]
}
