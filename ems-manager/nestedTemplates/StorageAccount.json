{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupLocation": {
            "type": "string"
        },
        "strCount": {
            "type": "int"
        },
        "shortlocation": {
            "type": "string"
        },
        "Application_Acronym": {
            "type": "string"
        },
        "Tier_Name": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        },
        "StorageAccountType": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[tolower(concat(parameters('Application_Acronym'),parameters('shortlocation'),parameters('Tier_Name'),parameters('Environment_Category'),'str','00',copyindex(1)))]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "copy": {
                "name": "strloop",
                "count": "[parameters('strCount')]"
            },
            "properties": {},
            "sku": {
                "name": "[parameters('StorageAccountType')]"
            },
            "tags": {}
        }
    ]
}
