{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nsgCount": {
            "type": "int"
        },
        "Application_Acronym": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            }
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  dev , qa , uat and prd"
            }
        },
        "Azure_Service": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars   e.g. Disk (dsk), Blob (blb), Storage Account (str) blb  etc"
            }
        },
        "Custom": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[tolower(concat('GAV-',resourcegroup().location,'-',parameters('Application_Acronym'),'-',parameters('Environment_Category'),'-',parameters('Azure_Service'),'-',parameters('Custom'),copyindex(1)))]",
            "location": "[resourcegroup().location]",
            "apiVersion": "2018-05-01",
            "copy": {
                "name": "nsgloop",
                "count": "[parameters('nsgCount')]"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "description": "Allows SSH traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        }
    ]
}
