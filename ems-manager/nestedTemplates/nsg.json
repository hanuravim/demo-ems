{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "shortlocation": {
            "type": "string"
        },
        "nsgCount": {
            "type": "int"
        },
        "Application_Acronym": {
            "type": "string"
        },
        "Environment_Category": {
            "type": "string"
        },
        "Azure_Service": {
            "type": "string"
        },
        "Custom": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[tolower(concat('GAV-',parameters('shortLocation'),'-',parameters('Application_Acronym'),'-',parameters('Environment_Category'),'-',parameters('Azure_Service'),'-',parameters('Custom'),'-','00',copyindex(1)))]",
            "location": "[resourcegroup().location]",
            "apiVersion": "2018-05-01",
            "copy": {
                "name": "nsgloop",
                "count": "[parameters('nsgCount')]"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "description": "Allows SSH traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        }
    ]
}
