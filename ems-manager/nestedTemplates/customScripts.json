{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int"
        },
        "virtualmachineName": {
            "type": "string"
        },
        "StorageAccountName": {
            "type": "string"
        },
        "AzureFileShareName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('virtualmachineName'), copyindex(1), '/customscript')]",
            "apiVersion": "2017-03-30",
            "location": "[resourcegroup().location]",
            "copy": {
                "name": "customscriptloop",
                "count": "[parameters('vmCount')]"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/hanuravim/demo-ems/master/ems-manager/nestedTemplates/customScripts.ps1"
                    ],
                    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File ','customScripts.ps1 -share ',parameters('AzureFileShareName'),'-SAName ',concat(parameters('StorageAccountName'),copyindex(1)),'-SAKey ', listKeys(resourceId(resourceGroup().name,'Microsoft.Storage/storageAccounts', concat(parameters('StorageAccountName'),copyindex(1))), '2015-06-15').key1)]"
                }
            }
        }
    ],
    "outputs": {
        "firstOutput": {
            "type": "string",
            "value": "[concat('powershell -ExecutionPolicy Unrestricted -File ','customScripts.ps1 -share ',parameters('AzureFileShareName'),'-SAName ',parameters('StorageAccountName'),'  -SAKey ', listKeys(resourceId(resourceGroup().name,'Microsoft.Storage/storageAccounts', concat(parameters('StorageAccountName'),copyindex(1))), '2015-06-15').key1)]"
        }
    }
}
