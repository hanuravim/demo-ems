{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "defaultValue": "adAdministrator"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string",
      "defaultValue": "efoqa.local"
    },
    "VnetName": {
      "type": "string",
      "defaultValue": "corevnet"
    },
    "VnetAddressSpace": {
      "type": "string",
      "defaultValue": "10.0.0.0/16"
    },
    "DCSubnetName": {
      "type": "string",
      "defaultValue": "subnet-1"
    },
    "DCSubnetRange": {
      "type": "string",
      "defaultValue": "10.0.0.0/24"
    },
    "DCHASetName": {
      "type": "string",
      "defaultValue": "DCAVSet"
    },
    "adPDCVMName": {
      "type": "string",
      "defaultValue": "adPDC"
    },
    "adBDCVMName": {
      "type": "string",
      "defaultValue": "adBDC"
    },
    "adPDCVMIP": {
      "type": "string"
    },
    "adBDCVMIP": {
      "type": "string"
    },
    "DCVmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_D1_v2"
    },
    "baseUri": {
      "type": "string"
    }
  },
  "variables": {
    "diagStorageAccountName": "[concat(uniquestring(resourceGroup().id), 'vmdiag')]",
    "VnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('VnetName'))]",
    "ADSubnetRef": "[concat(variables('VnetID'), '/subnets/', parameters('DCSubnetName'))]",
    "windowsVmTemplateURL": "[concat(parameters('baseUri'),'/nestedTemplate/windowsvm.json')]",
    "adPDCModulesURL": "[concat(parameters('baseUri'),'/DSC/CreateADPDC.ps1.zip')]",
    "adPDCConfigurationFunction": "CreateADPDC.ps1\\CreateADPDC",
    "adBDCModulesURL": "[concat(parameters('baseUri'),'/DSC/ConfigureADBDC.ps1.zip')]",
    "adBDCConfigurationFunction": "ConfigureADBDC.ps1\\ConfigureADBDC",
    "vnetwithDNSTemplateUri": "[concat(parameters('baseUri'),'/nestedTemplate/update-vnet-dns.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('diagStorageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "name": "[parameters('DCHASetName')]",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[resourceGroup().location]",
      "apiVersion": "2017-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "DCHASet"
      },
      "properties": {
        "platformUpdateDomainCount": 2,
        "platformFaultDomainCount": 2
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "name": "DC1Deploy",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[parameters('adPDCVMName')]"
          },
          "vmSize": {
            "value": "[parameters('DCVmSize')]"
          },
          "subnetId": {
            "value": "[variables('ADSubnetRef')]"
          },
          "fixedPrivateIp": {
            "value": "[parameters('adPDCVMIP')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', parameters('DCHASetName'))]"
          }
        }
      }
    },
    {
      "name": "DC2Deploy",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]",
        "[resourceId('Microsoft.Resources/deployments', 'UpdateVNetDNS')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('windowsVmTemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[parameters('adBDCVMName')]"
          },
          "vmSize": {
            "value": "[parameters('DCVmSize')]"
          },
          "subnetId": {
            "value": "[variables('ADSubnetRef')]"
          },
          "fixedPrivateIp": {
            "value": [
              "[parameters('adBDCVMIP')]"
            ]
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "diagStorageAccountId": {
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))]"
          },
          "availabilitySetId": {
            "value": "[resourceId('Microsoft.Compute/availabilitySets', parameters('DCHASetName'))]"
          }
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('adPDCVMName'),'/CreateADForest')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'DC1Deploy')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.19",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "[variables('adPDCModulesURL')]",
          "ConfigurationFunction": "[variables('adPDCConfigurationFunction')]",
          "Properties": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUserName')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            }
          }
        },
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('adBDCVMName'),'/ConfigureADBDC')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'DC2Deploy')]",
        "[resourceId('Microsoft.Resources/deployments', 'UpdateVNetDNS')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.19",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "[variables('adBDCModulesURL')]",
          "ConfigurationFunction": "[variables('adBDCConfigurationFunction')]",
          "Properties": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUserName')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            }
          }
        },
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    },
    {
      "name": "UpdateVNetDNS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('adPDCVMName'),'/extensions/CreateADForest')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vnetwithDNSTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('VnetName')]"
          },
          "virtualNetworkAddressRange": {
            "value": "[parameters('VnetAddressSpace')]"
          },
          "subnetName": {
            "value": "[parameters('DCSubnetName')]"
          },
          "subnetRange": {
            "value": "[parameters('DCSubnetRange')]"
          },
          "DNSServerAddress": {
            "value": [
              "[parameters('adPDCVMIP')]",
              "[parameters('adBDCVMIP')]"
            ]
          }
        }
      }
    }
  ],
  "outputs": {}
}
