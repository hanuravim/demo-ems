{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlNodeCount": {
            "type": "int"
        },
        "SqlVmPrefix": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "SQLPrepareModuleURL": {
            "type": "string"
        },
        "DomainPassword": {
            "type": "securestring"
        },
        "DomainUserName": {
            "type": "string"
        },
        "clusterIpAddress": {
            "type": "string"
        },
        "SQLPrepareFunction": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('SqlVmPrefix'), copyindex(1), '/configuresql', copyindex(1))]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "sqlconfigloop",
                "count": "[parameters('sqlNodeCount')]",
                "mode": "Serial",
                "batchSize": 1
            },
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.21",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "modulesURL": "[parameters('SQLPrepareModuleURL')]",
                    "configurationFunction": "[parameters('SQLPrepareFunction')]",
                    "properties": {
                        "domainName": "[parameters('domainName')]",
                        "adminCreds": {
                            "userName": "[parameters('DomainUserName')]",
                            "password": "PrivateSettingsRef:DomainPassword"
                        },
                        "ClusterName": "SQLClusterAG",
                        "ClusterOwnerNode": "[concat(parameters('SqlVmPrefix'), '0')]",
                        "ClusterIP": "[parameters('clusterIpAddress')]"
                    }
                },
                "protectedSettings": {
                    "items": {
                        "adminPassword": "[parameters('DomainPassword')]"
                    }
                }
            }
        }
    ]
}
